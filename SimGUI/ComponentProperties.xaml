<Window x:Class="SimGUI.ComponentProperties"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Component Properties"  Width="300" SizeToContent="Height">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="OK" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="75" Click="OKButton_Click" />
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center" Width="75" Click="CancelButton_Click" Margin="0,0,130,0" />
        <Label Content="Model:" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <ComboBox x:Name="ModelSelection" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Margin="70,0,0,0"/>


        <Grid Name="CustomGrid" HorizontalAlignment="Stretch" Grid.Row="1" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        
    </Grid>
</Window>
